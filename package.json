{
  "name": "origin-notes",
  "version": "1.0.8",
  "description": "绠€绾﹂鏍肩殑鍘熷瓙绗旇搴旂敤",
  "main": "./out/main/index.js",
  "author": {
    "name": "Origin-Notes",
    "email": "origin-notes@users.noreply.github.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:utf8": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/dev_utf8.ps1",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^3.17.1",
    "@tiptap/extension-color": "^2.27.2",
    "@tiptap/extension-highlight": "^2.27.2",
    "@tiptap/extension-image": "^2.4.0",
    "@tiptap/extension-placeholder": "^2.4.0",
    "@tiptap/extension-table": "^2.27.2",
    "@tiptap/extension-table-cell": "^2.27.2",
    "@tiptap/extension-table-header": "^2.27.2",
    "@tiptap/extension-table-row": "^2.27.2",
    "@tiptap/extension-task-item": "^2.4.0",
    "@tiptap/extension-task-list": "^2.4.0",
    "@tiptap/extension-underline": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "@tiptap/vue-3": "^2.4.0",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "better-sqlite3": "^12.6.2",
    "dexie": "^4.0.4",
    "dompurify": "^3.3.1",
    "electron-updater": "^6.7.3",
    "highlight.js": "^11.11.1",
    "html-docx-js-typescript": "^0.1.5",
    "katex": "^0.16.28",
    "lowlight": "^3.3.0",
    "mammoth": "^1.11.0",
    "marked": "^17.0.1",
    "pinia": "^2.1.7",
    "smart-buffer": "^4.2.0",
    "tiptap-markdown": "^0.8.10",
    "uuid": "^9.0.1",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/katex": "^0.16.8",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.2.0",
    "sass": "^1.72.0",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "vue-tsc": "^2.0.7"
  },
  "build": {
    "appId": "com.origin.notes",
    "productName": "LmNotebook",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "maintainer": "Origin-Notes <origin-notes@users.noreply.github.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LmNotebook"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      "build/icon.ico",
      "build/icon.png",
      {
        "from": "src/backend/dist/origin_backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "AVIDS2",
        "repo": "Origin-Notes",
        "releaseType": "release"
      }
    ]
  }
}
